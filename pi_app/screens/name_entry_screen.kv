#:kivy 2.2.1
#:import UI_STRINGS pi_app.strings.UI_STRINGS

<NameEntryScreen>:
    title: UI_STRINGS['name_entry']['title']
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'

        Label:
            text: UI_STRINGS['name_entry']['title']
            font_size: '32sp'
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'

        # Player 1 Name Entry
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '100dp'

            Label:
                text: UI_STRINGS['common']['player1']
                font_size: '24sp'
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '40dp'

            TextInput:
                id: player1_name
                text: UI_STRINGS['common']['player1']
                multiline: False
                font_size: '20sp'
                size_hint_y: None
                height: '50dp'

        # Player 2 Name Entry
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '100dp'

            Label:
                text: UI_STRINGS['common']['player2']
                font_size: '24sp'
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '40dp'

            TextInput:
                id: player2_name
                text: UI_STRINGS['common']['player2']
                multiline: False
                font_size: '20sp'
                size_hint_y: None
                height: '50dp'

        # Continue Button
        Button:
            text: UI_STRINGS['name_entry']['continue']
            font_size: '24sp'
            size_hint_y: None
            height: '60dp'
            on_release: root.submit_names() 