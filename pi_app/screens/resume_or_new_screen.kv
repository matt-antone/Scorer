#:kivy 2.2.1
#:import UI_STRINGS pi_app.strings.UI_STRINGS

<ResumeOrNewScreen>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'

        Label:
            text: UI_STRINGS['resume_or_new']['found_game']
            font_size: '24sp'
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '40dp'

        Label:
            text: UI_STRINGS['resume_or_new']['question']
            font_size: '18sp'
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '30dp'

        Widget:
            size_hint_y: None
            height: '20dp'

        BoxLayout:
            orientation: 'horizontal'
            spacing: '20dp'
            size_hint_y: None
            height: '50dp'

            Button:
                text: UI_STRINGS['resume_or_new']['resume']
                font_size: '20sp'
                on_release: root.resume_game()

            Button:
                text: UI_STRINGS['resume_or_new']['new_game']
                font_size: '20sp'
                on_release: root.new_game() 