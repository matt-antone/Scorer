<ResumeOrNewScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(40)
        spacing: dp(30)
        Label:
            text: 'A previous game was found.'
            font_size: '28sp'
            size_hint_y: None
            height: self.texture_size[1] + dp(20)
        Label:
            text: 'Would you like to resume or start a new game?'
            font_size: '20sp'
            size_hint_y: None
            height: self.texture_size[1] + dp(10)
        Button:
            text: 'Resume Game'
            font_size: '24sp'
            size_hint_y: None
            height: dp(60)
            on_press: root.resume_game()
        Button:
            text: 'Start New Game'
            font_size: '24sp'
            size_hint_y: None
            height: dp(60)
            on_press: root.start_new_game() 