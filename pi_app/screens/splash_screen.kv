#:kivy 2.3.0

<SplashScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        size: 800, 480
        padding: '10dp'
        spacing: '10dp'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.8
            spacing: '10dp'
            Widget:
                size_hint_y: 0.3
            Image:
                source: '../assets/icon_128.png'
                size_hint: None, None
                size: 350, 350
                allow_stretch: True
                keep_ratio: True
                pos_hint: {'center_x': 0.5}
            Label:
                text: 'A Warhammer 40k Scoreboard'
                font_size: '20sp'
                size_hint_y: None
                height: self.texture_size[1]
            Label:
                text: root.status_text
                font_size: '16sp'
                size_hint_y: None
                height: self.texture_size[1]
                color: 0.7, 0.7, 0.7, 1
            Spinner:
                id: loading_spinner
                size_hint: None, None
                size: '48dp', '48dp'
                pos_hint: {'center_x': 0.5}
                active: root.show_loading
                color: 0.7, 0.7, 0.7, 1
                opacity: 1 if root.show_loading else 0
            Widget:
                size_hint_y: 0.3
        Button:
            id: start_button
            text: 'START'
            font_size: '32sp'
            size_hint: 0.5, None
            height: dp(70)
            pos_hint: {'center_x': 0.5, 'y': 0.05}
            disabled: not root.start_enabled
            on_press: root.on_start_button()
            player: 0 # Neutral
            background_color: 0.13, 0.55, 0.13, 1 