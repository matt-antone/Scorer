<NumberPadPopup>:
    size_hint: None, None
    size: '220dp', '280dp'
    auto_dismiss: False
    input_box: input_box

    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'

        TextInput:
            id: input_box
            multiline: False
            readonly: True
            font_size: '32sp'
            size_hint_y: 0.2
            hint_text: "0"
            padding: [10, (self.height - self.line_height) / 2, 10, 0]

        GridLayout:
            cols: 3
            spacing: '10dp'

            Button:
                text: '1'
                on_press: root.on_button_press(self)
                background_color: 0.3, 0.3, 0.3, 1
            Button:
                text: '2'
                on_press: root.on_button_press(self)
                background_color: 0.3, 0.3, 0.3, 1
            Button:
                text: '3'
                on_press: root.on_button_press(self)
                background_color: 0.3, 0.3, 0.3, 1
            Button:
                text: '4'
                on_press: root.on_button_press(self)
                background_color: 0.3, 0.3, 0.3, 1
            Button:
                text: '5'
                on_press: root.on_button_press(self)
                background_color: 0.3, 0.3, 0.3, 1
            Button:
                text: '6'
                on_press: root.on_button_press(self)
                background_color: 0.3, 0.3, 0.3, 1
            Button:
                text: '7'
                on_press: root.on_button_press(self)
                background_color: 0.3, 0.3, 0.3, 1
            Button:
                text: '8'
                on_press: root.on_button_press(self)
                background_color: 0.3, 0.3, 0.3, 1
            Button:
                text: '9'
                on_press: root.on_button_press(self)
                background_color: 0.3, 0.3, 0.3, 1
            Button:
                text: 'C'
                on_press: root.on_button_press(self)
                background_color: 1, 0, 0, 1
            Button:
                text: '0'
                on_press: root.on_button_press(self)
                background_color: 0.3, 0.3, 0.3, 1
            Button:
                text: 'OK'
                on_press: root.on_button_press(self)
                background_color: 0, 1, 0, 1 