#:kivy 2.2.1
#:import UI_STRINGS strings.UI_STRINGS

<NumberPadPopup>:
    title: UI_STRINGS['number_pad']['title']
    size_hint: 0.8, 0.8
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'

        # Display
        TextInput:
            id: display
            multiline: False
            readonly: True
            font_size: '32sp'
            hint_text: UI_STRINGS['number_pad']['hint']
            background_color: 0.1, 0.1, 0.1, 1
            foreground_color: 1, 1, 1, 1
            cursor_color: 1, 1, 1, 1
            padding: '10dp'
            size_hint_y: None
            height: '60dp'

        # Number Pad Grid
        GridLayout:
            cols: 3
            spacing: '10dp'
            padding: '10dp'
            size_hint_y: None
            height: '300dp'

            # Row 1
            Button:
                text: UI_STRINGS['number_pad']['digits']['1']
                font_size: '24sp'
                background_color: 0.2, 0.2, 0.2, 1
                size_hint_y: None
                height: '60dp'
                on_release: root.on_button_press(self)
            Button:
                text: UI_STRINGS['number_pad']['digits']['2']
                font_size: '24sp'
                background_color: 0.2, 0.2, 0.2, 1
                size_hint_y: None
                height: '60dp'
                on_release: root.on_button_press(self)
            Button:
                text: UI_STRINGS['number_pad']['digits']['3']
                font_size: '24sp'
                background_color: 0.2, 0.2, 0.2, 1
                size_hint_y: None
                height: '60dp'
                on_release: root.on_button_press(self)

            # Row 2
            Button:
                text: UI_STRINGS['number_pad']['digits']['4']
                font_size: '24sp'
                background_color: 0.2, 0.2, 0.2, 1
                size_hint_y: None
                height: '60dp'
                on_release: root.on_button_press(self)
            Button:
                text: UI_STRINGS['number_pad']['digits']['5']
                font_size: '24sp'
                background_color: 0.2, 0.2, 0.2, 1
                size_hint_y: None
                height: '60dp'
                on_release: root.on_button_press(self)
            Button:
                text: UI_STRINGS['number_pad']['digits']['6']
                font_size: '24sp'
                background_color: 0.2, 0.2, 0.2, 1
                size_hint_y: None
                height: '60dp'
                on_release: root.on_button_press(self)

            # Row 3
