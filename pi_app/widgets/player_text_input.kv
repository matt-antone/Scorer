<PlayerTextInput@TextInput>:
    multiline: False
    font_size: '24sp'
    font_name: 'Inter_18pt-Bold.ttf'
    size_hint: None, None
    size: '200dp', '48dp'
    padding: [10, (self.height - self.line_height) / 2, 10, 0]
    background_color: 0.2, 0.2, 0.2, 1
    foreground_color: 1, 1, 1, 1
    cursor_color: 1, 1, 1, 1
    valign: 'middle'
    text_valign: 'middle' 