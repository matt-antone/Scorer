#:kivy 2.3.0
#:import UI_STRINGS pi_client.strings.UI_STRINGS

<GameOverScreen>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'

        Label:
            id: winner_label
            text: 'Game Over'
            font_size: '24sp'
            size_hint_y: None
            height: '48dp'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'

            Label:
                id: p1_final_score_label
                text: '0'
                font_size: '20sp'
                size_hint_x: 0.5

            Label:
                id: p2_final_score_label
                text: '0'
                font_size: '20sp'
                size_hint_x: 0.5

        Widget:
            size_hint_y: 1

        RoundedButton:
            text: 'New Game'
            size_hint_y: None
            height: '48dp'
            on_release: root.start_new_game() 